{
  "name": "boomform-builder",
  "version": "2.2.3",
  "description": "Simple Form Builder",
  "author": "BoomTechLLC",
  "license": "MIT",
  "repository": "https://github.com/BoomTech-LLC/BoomForm-Builder",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "set GENERATE_SOURCEMAP=false && microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "npm run jest && gh-pages -d example/build",
    "test": "jest --testPathPattern=__tests  --env=jsdom",
    "test:time": "jest --findRelatedTests src/__tests/time.test.js",
    "test:storeProgres": "jest --findRelatedTests src/__tests/storeProgres.test.js",
    "test:scaleRating": "jest --findRelatedTests src/__tests/scaleRating.test.js",
    "test:payment": "jest --findRelatedTests src/__tests/payment.test.js",
    "test:password": "jest --findRelatedTests src/__tests/password.test.js",
    "test:pagination": "jest --findRelatedTests src/__tests/pagination.test.js",
    "test:logic": "jest --findRelatedTests src/__tests/logic.test.js",
    "test:global": "jest --findRelatedTests src/__tests/global.test.js --env=jsdom",
    "test:files": "jest --findRelatedTests src/__tests/files.test.js"
  },
  "peerDependencies": {
    "react": ">=16.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.4",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@googlemaps/js-api-loader": "^1.16.6",
    "axios": "^0.25.0",
    "boomform": "^3.6.7",
    "classnames": "^2.3.1",
    "react-google-recaptcha": "^2.1.0",
    "react-grid-layout": "^1.4.2",
    "react-quill": "^2.0.0",
    "react-signature-canvas": "^1.0.5"
  }
}
